<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Item</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h2>
            <span>
                <% itemList.forEach(item => { %> <!-- Opening ejs forEach item iteration-->
                    <% if (item._id==idItem) { %>
                    <div>
                        <span>Work Order Number: <span><%= item.vehicleBumperNumber + "-" + item.numinput  %></span></span>   
                    </div>
                    <% } %>
                <% }) %>
            </span>
        </h2>
        <section>
            <ol>
                <% itemList.forEach(item => { %>
                    <% if (item._id==idItem) { %>
                        <div>
                            <form action="/edit/update/<%= item._id %>" method="POST">
                                <div>
                                    <label for="vehicleBumperNumber">Vehicle Bumper Number</label>
                                    <input type="text" value="<%= item.vehicleBumperNumber %>" name="vehicleBumperNumber">
                                </div>
                                <div>
                                    <label for="numinput">Work Order Number</label>
                                    <input type="number" value="0">
                                </div>
                                <div>
                                    <label for="mechanic">Mechanic</label>
                                    <input type="number" name="mechanic" <%= item.mechanic %>" >
                                </div>
                                
                                <div class="editCancel">
                                    <button type="submit" class="confirm">Confirm Edit</button>
                                    <a href="/" class="cancel">Cancel</a>
                                </div>
                            </form>
                        </div>
                        <% } else { %>
                            <!-- I'm commenting this out as to only edit 1 Work Order at a time -->
                            <!-- <li>
                                <span>Work Order Number: <span><%= item.vehicleBumperNumber + "-" + item.numinput  %></span></span>
                                <div>
                                    <%= item.vehicleBumperNumber %>
                                </div>
                                <div>
                                    <%= item.mechanic %>
                                </div>
                                <a href="/edit/<%= item._id %>">Edit</a>
                                <a href="/" class="cancel">Cancel</a>
                            </li> -->
                            <% } %>
                                <% }) %>
            </ol>
        </section>
    </div>
</body>
</html>