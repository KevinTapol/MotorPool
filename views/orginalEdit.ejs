<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Item</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1><h1>Edit a specifc work order</h1></h1>
        <section>
            <ol>
                <% itemList.forEach(item => { %>
                    <% if (item._id==idItem) { %>
                        <li>
                            <form action="/edit/update/<%= item._id %>" method="POST">
                                <label for="vehicleBumperNumber">Vehicle Bumper Number</label>
                                <input type="text" value="<%= item.vehicleBumperNumber %>" name="vehicleBumperNumber">
                                <br>
                                <label for="numinput">Work Order Number</label>
                                <input type="number" value="0">
                                <br>
                                <label for="mechanic">Mechanic</label>
                                <input type="number" <%= item.mechanic %>" name="mechanic">
                                <br>
                                <button type="submit" class="confirm">Confirm Edit</button>
                                <a href="/" class="cancel">Cancel</a>
                            </form>
                        </li>
                        <% } else { %>
                            <li>
                                <span>Work Order Number: <span><%= item.vehicleBumperNumber + "-" + item.numinput  %></span></span>
                                <div>
                                    <%= item.vehicleBumperNumber %>
                                </div>
                                <div>
                                    <%= item.mechanic %>
                                </div>
                                <a href="/edit/<%= item._id %>">Edit</a>
                                <a href="/" class="cancel">Cancel</a>
                            </li>
                            <% } %>
                                <% }) %>
            </ol>
        </section>
    </div>
</body>
</html>